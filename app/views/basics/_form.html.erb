<%= form_for([@basic, @basic.spaces.build]) do |f| %>
	<% if @basic.errors.any? %>
	  <div class="alert alert-warning" role="alert">
	    <%= "Error:"%> 
	    <ul>
	    <% @basic.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>
  <form> 
		<tr>	  
		  <td>
		  	<div class="form-group">		    	
			  	<%= f.text_field :name, class: "form-control" %>
		    </div>
		  </td>		  
		  <td>
		  	<div class="form-group my_select">
		  		<%= f.collection_select :spaceType, @basic.space_categories.all, :id, :name, {}, { :multiple => false, :class => 'my_select' } %>	
		    </div>
		  </td>		  		  
		  <td>
		  	<div class="form-group">		    	
			  	<%= f.number_field :multiplier, class: "form-control" %>
		    </div>
		  </td>		  		  
		  <td>
		  	<div class="form-group">		    	
			  	<%= f.number_field :area, class: "form-control"%>
		    </div>
		  </td>		  
		  <td>
			  <%= f.submit "New zone" , class: "btn btn-large btn-default" %>
			</td>
					
		</tr>
	</form>
<% end %>