<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">New occupant type</h4>
      </div>
      
			<%= form_for([@basic, @basic.occupant_categories.build]) do |f| %>
				<div class="modal-body">
				  <form>
				  	<div class="page-header space_hearder">
							<h4>Name</h4>
						</div>
						<div class="row my_row">
							<div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 my_table">	  
							  <div class="form-group">		    	
								  <%= f.text_field :name, class: "form-control" %>
							  </div>
						  </div>		  	  		  
						</div>
						<div class="page-header space_hearder">
							<h4>Event</h4>
						</div>			
						<%= render 'tb1' %>
						<div class="page-header space_hearder">
							<h4>Space occupancy</h4>
						</div>			
						<%= render 'tb2' %>
						<div type="button" class="btn btn-default" data-dismiss="modal">Cancel</div>	
						<%= f.submit "Add" , class: "btn btn-large btn-primary"%>   
					</form>
      	</div>
      <% end %>
    </div>
  </div>
</div>